#include <SoftwareSerial.h>
SoftwareSerial mySerial(8, 12); // RX, TX

// do else if instead of if

int a;

void setup() {
  pinMode(8, INPUT);
  pinMode(12, OUTPUT);
  pinMode(4, OUTPUT);
  pinMode(7, OUTPUT);
  Serial.begin(9600);
  mySerial.begin(9600);
}

    
void loop() {
  while (mySerial.available()){
  // if text arrived in from BT serial...

    a=mySerial.read();
    if (a=='0'){
      analogWrite(5, 0);
      analogWrite(6, 0);
    }
    else {
      if (a =='1') // forwards
      {
        digitalWrite(4, LOW);
        digitalWrite(7, LOW);
        analogWrite(5, 255);
        analogWrite(6, 255);
      }
      if (a =='2') // right
      {
        digitalWrite(4, LOW);
        digitalWrite(7, HIGH);
        analogWrite(5, 255);
        analogWrite(6, 255);
      }
      if (a =='3') // left
      {
        digitalWrite(4, HIGH);
        digitalWrite(7, LOW);
        analogWrite(5, 255);
        analogWrite(6, 255);
      }   
      if (a =='4') // reverse
      {
        digitalWrite(4, HIGH);
        digitalWrite(7, HIGH);
        analogWrite(5, 255);
        analogWrite(6, 255);
      }
      
      /*if (a == 5){ //5 = circle
        https://circuitdigest.com/microcontroller-projects/line-follower-robot-using-arduino
        if (digitalRead(LS) && digitalRead(RS))     // Move Forward
          digitalWrite(4, LOW);
          digitalWrite(7, LOW);
          analogWrite(5, 255);
          analogWrite(6, 255);*/
      
    }
  }
}
//https://www.hackster.io/Bill_Mougios/arduino-controlled-car-with-hc-sr04-a8e57d

